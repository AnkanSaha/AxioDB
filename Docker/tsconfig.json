{
  "compilerOptions": {
    "outDir": "./build", // Specify an output directory for the transpiled JavaScript files
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "./build/types", // Specify the output directory for declaration files
    "moduleResolution": "Node",
    "checkJs": false, // Disable checking of JavaScript files
    "allowJs": true, // Allow JavaScript files to be included
    "sourceMap": true,
    "jsx": "react", // Specify the JSX factory function
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // Skip type checking of declaration files from dependencies
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES6",
      "DOM"
    ], // Include the necessary TypeScript library declarations
    "rootDir": "./" // Specify the root directory for your source code
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.proto"
  ], // Include TypeScript, TSX, and Proto files
  "exclude": [
    "node_modules",
    "GUI",
  ]
}